<!DOCTYPE html>
<html>
<head>
    <title>Control Service</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/style.css" />
</head>
<body>
  {{> control/partials/nav}}
  <section>
  {{> control/partials/storage-types}}
  <h1>Storage</h1>
  <table>
      {{#each storage}}
      <tr>
        <th>Type</th>
        <th>Name</th>
        <th>Path</th>
        <th>Must Clean</th>
        <th>Permit Temp</th>
      </tr>
      <tr>
        <td>{{base.type}}</td>
        <td>{{base.name}}</td>
        <td>{{base.path}}</td>
        <td>{{base.mustClean}}</td>
        <td>{{base.permitTemp}}</td>
      </tr>
      <tr>
      <th></th>
      <th>Type</th>
      <th colspan="2">Path</th>
      <th>Description</th>
      </tr>
      {{#each storage}}
        <tr>
            <td>
            </td>
            <td>{{storage.type}}</td>
            <td colspan="2">{{storage.path}}</td>
            <td>{{storage.description}}</td>
        </tr>
      {{/each}}
      {{/each}}
  </table>
  </section>
</body>
<script src="/refresh.js"></script>
<script>
    window.setInterval(() => {
        refresh(["storage"]);
    }, 30000);
</script>
</html>